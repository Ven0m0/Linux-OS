# EditorConfig
# http://EditorConfig.org
root = true

# ---------------------
# Baseline
# ---------------------
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2

# ---------------------
# Shell scripts
# ---------------------
[*.sh,*.bash*,.profile,bash*]
keep_padding = true
space_redirects = false
switch_case_indent = true
function_next_line = true
binary_next_line = true
shell_variant = bash

# ---------------------
# Fish shell
# ---------------------
[*.fish,fish_*]
indent_style = space
indent_size = 4
tab_width = 4

# ---------------------
# Markdown, Patches
# ---------------------
[*.md,*.patch]
trim_trailing_whitespace = false
insert_final_newline = true

# ---------------------
# Go, Rust, Zig, Makefiles
# ---------------------
[*.go,*.rs,*.zig,Makefile,*.mk]
indent_style = tab
indent_size = 4
tab_width = 4

# ---------------------
# Python
# ---------------------
[*.py]
indent_style = space
indent_size = 4
tab_width = 4
