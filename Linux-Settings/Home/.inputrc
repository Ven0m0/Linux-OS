# /etc/inputrc - global inputrc for libreadline
# See readline(3readline) and 'info rluserman' for more information.

# Allow UTF-8 input and output
set input-meta on
set output-meta on
set convert-meta off

# Be more intelligent when autocompleting
set skip-completed-text on

# Immediately add a trailing slash when autocompleting symlinks to directories
set mark-symlinked-directories on

# List all matches in case multiple possible completions are possible
set show-all-if-ambiguous on

# try to enable the application keypad when it is called.  Some systems
# need this to enable the arrow keys.
# set enable-keypad on

# Very useful for the tab completion
set completion-ignore-case On
# It treats hyphens and underscores equally during the completion
set completion-map-case on
# turn off use of internal pager when returning long completion lists
set page-completions off
# don't match files starting with .
set match-hidden-files off


# allow the use of the Home/End keys
# https://wiki.archlinux.org/index.php/Home_and_End_keys_not_working
#"\e[1~": beginning-of-line
#"\e[4~": end-of-line
# those two are for rxvt
"\e[7~":beginning-of-line
"\e[8~":end-of-line

# allow the use of the Delete/Insert keys
"\e[3~": delete-char
"\e[2~": quoted-insert

# mappings for "page up" and "page down" to step to the beginning/end
# of the history
"\e[5~": beginning-of-history
"\e[6~": end-of-history

# alternate mappings for "page up" and "page down" to search the history
# "\e[5~": history-search-backward
# "\e[6~": history-search-forward

# Note to get rid of a line just Ctrl-C
# Use the shell like in Octave/Matlab with up and down arrows
"\e[A":history-search-backward
"\e[B":history-search-forward
# Same for C-p and C-n
"\C-p":history-search-backward
"\C-n":history-search-forward

$if Bash
  #do history expansion when space entered
  Space: magic-space
$endif

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
