# Don't let ripgrep vomit really long lines to my terminal, and show a preview.
--max-columns=150
--max-columns-preview

# Using glob patterns to include/exclude files or folders
--glob=!.git/*
--ignore
--no-require-git
--ignore-vcs
--ignore-parent
--ignore-global
--ignore-dot
--ignore-file="$HOME/.gitignore"
--ignore-file="$HOME/.ignore"

# Disable regular expression matching and treat the pattern as a literal string
--fixed-strings

--color=auto
--smart-case
--threads 0
#--threads $(nproc 2>/dev/null)
#--mmap
#--max-depth 4
--one-file-system
--trim
--block-buffered
--no-line-number
--no-heading
--no-ignore-messages
--engine=default
#--engine=auto
--no-unicode
